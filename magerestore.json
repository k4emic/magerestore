{
  "repositories": {
    "sample": {
      "description": "Sample backup server",
      "type": "ssh",
      "host": "backup.example.com",
      "user": "example",
      "port": 22
    }
  },

  "resources": {
    "mysql": {
      "repo": "sample",
      "directory": "/var/backups/example/mysql",
      "type": "mage_database",
      "script_after": "echo 'hoello world'"
    },

    "media": {
      "repo": "sample",
      "directory": "/var/backups/example/media/",
      "type": "media_zip",
      "script_after": "echo 'hello again'"
    }
  }
}
